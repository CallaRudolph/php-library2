<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Library</title>
  </head>
  <body>
    <h1>{{ author.getName }}</h1>

    {% if books is not empty %}
        <p>Here are the books by this author:</p>
        <ul>
            {% for book in books %}
                <li><a href="/books/{{ book.getId }}/remove">{{ book.getTitle }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add an book to this author:</h4>

    <form action='/add_books' method='post'>
        <input id="author_id" name="author_id" type="hidden" value="{{ author.getId }}">
        <label for='book_id'>Select a book</label>
        <select id='book_id' name='book_id' type='text'><br>
          {% for book in all_books %}
            <option value="{{ book.getId }}"> {{ book.getTitle }} </option>
          {% endfor %}
      </select>

        <button type='submit'>Add author</button>
    </form>

    <p><a href="/authors/{{ author.getId }}/edit">Edit this published author</a></p>
    <p><a href='/'>Home</a></p>
  </body>
</html>
