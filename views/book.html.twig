<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Library</title>
  </head>
  <body>
    <h1>{{ book.getTitle }}</h1>

    {% if authors is not empty %}
        <p>Here are the authors for this book:</p>
        <ul>
            {% for author in authors %}
                <li>{{ author.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add an author to this book:</h4>

    <form action='/add_authors' method='post'>
        <input id="book_id" name="book_id" type="hidden" value="{{ book.getId }}">
        <label for='author_id'>Select an Author</label>
        <select id='author_id' name='author_id' type='text'><br>
          {% for author in all_authors %}
            <option value="{{ author.getId }}"> {{ author.getName }} </option>
          {% endfor %}
      </select>

        <button type='submit'>Add author</button>
    </form>

    <h3>Remove author from this book:</h3>

    <p><a href="/books/{{ book.getId }}/edit">Edit this book</a></p>
    <p><a href='/'>Home</a></p>
  </body>
</html>
